<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>
    <typeAliases>
        <typeAlias type="com.board.model.ImageDTO" alias="imageDTO"/>
        <typeAlias type="com.board.model.UserDTO" alias="userDTO"/>
        <typeAlias type="com.board.model.ContentsDTO" alias="contentDTO"/>
        <typeAlias type="com.board.model.CharacterDTO" alias="characterDTO"/>
    </typeAliases>
    <mappers>
        <mapper resource="mapper/userMapper.xml"/>
        <mapper resource="mapper/characterMapper.xml"/>
        <mapper resource="mapper/contentsMapper.xml"/>
        <mapper resource="mapper/imageMapper.xml"/>
    </mappers>
</configuration>